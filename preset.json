{
  "useConfigFiles": true,
  "packageManager": "npm",
  "router": true,
  "vuex": false,
  "cssPreprocessor": "less",
  "plugins": {
    "@vue/cli-plugin-babel": {},
    "@vue/cli-plugin-eslint": {
      "config": "airbnb",
      "lintOn": [
        "save",
        "commit"
      ]
    },
    "vue-cli-plugin-style-resources-loader": {}
  },
  "configs": {
    "rules": {
      "linebreak-style": "off",
      "func-names": "off",
      "import/no-unresolved": "off",
      "import/extensions": "off",
      "no-param-reassign": "off"
    }
  }
}